{
  "version": 2,
  "builds": [
    {
      "src": "mysites/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "50mb" }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "staticfiles_build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mysites/wsgi.py"
    }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "mysites.settings",
    "PYTHONUNBUFFERED": "1"
  }
}
