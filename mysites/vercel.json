{
  "version": 2,
  "builds": [
    {
      "src": "mysites/wsgi.py",
      "use": "@vercel/python",
      "config": { "maxLambdaSize": "15mb", "runtime": "python3.9" }
    }
  ],
  "buildCommand": "pip install -r requirements.txt && python manage.py collectstatic --noinput && find ./staticfiles_build",
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/staticfiles_build/$1"
    },
    {
      "src": "/(.*)",
      "dest": "mysites/wsgi.py"
    }
  ]
}

