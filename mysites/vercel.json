{
  "builds": [
    {
      "src": "mysites/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": ["staticfiles_build/**", "mysites/**"]
      }
    }
  ],
  "routes": [
    { "src": "/static/(.*)", "dest": "/static/$1" },
    { "src": "/(.*)", "dest": "mysites/wsgi.py" }
  ],
  "env": {
    "DJANGO_SETTINGS_MODULE": "mysites.settings",
    "PYTHONUNBUFFERED": "1"
  },
  "build": {
    "env": {
      "DJANGO_SETTINGS_MODULE": "mysites.settings"
    },
    "commands": [
      "python manage.py collectstatic --noinput"
    ]
  }
}
